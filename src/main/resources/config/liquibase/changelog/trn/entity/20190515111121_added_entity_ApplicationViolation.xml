<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity sequence.
    -->
    <changeSet id="20190515111121-seq-1" author="Mena Emiel">
        <createSequence sequenceName="apvi_seq" startValue="1" incrementBy="1" cacheSize="0"/>
    </changeSet>

    <!--
        Added the entity ApplicationViolation.
    -->
    <changeSet id="20190515111121-1" author="Mena Emiel">
        <createTable tableName="trn_application_violation" remarks="ApplicationViolation (trn_application_violation) entity. @author Mena Emiel.">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="is_eligible_for_exemption" type="boolean">
                <constraints nullable="false" />
            </column>

            <column name="is_exempted" type="boolean">
                <constraints nullable="false" />
            </column>

            <column name="violation_level" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="exemption_process_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="exempted_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="exemption_date" type="datetime">
                <constraints nullable="true" />
            </column>

            <column name="application_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="service_request_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="trn_application_violation" columnName="exemption_date" columnDataType="datetime"/>
        
    </changeSet>
    
    <!-- Added the entity audit columns -->
    <changeSet id="20190515111121-audit-1" author="jMena Emiel">
        <addColumn tableName="trn_application_violation">
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </addColumn>
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
