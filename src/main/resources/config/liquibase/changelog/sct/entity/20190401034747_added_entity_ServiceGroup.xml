<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
      Added the entity sequence.
    -->

    <changeSet id="20190401034747-seq-1" author="Rami Nassar">
        <createSequence sequenceName="segr_seq" startValue="1" incrementBy="1" cacheSize="0"/>
    </changeSet>

    <!--
        Added the entity ServiceGroup.
    -->
    <changeSet id="20190401034747-1" author="Rami Nassar">
        <createTable tableName="sct_service_group" remarks="The Service Group entity. @author Rami Nassar">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="varchar(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="ux_service_group_code" />
            </column>

            <column name="name" type="varchar(4000)">
                <constraints nullable="false" />
            </column>

            <column name="status" type="varchar(255)">
                <constraints nullable="false" />
            </column>

        </createTable>
        
    </changeSet>
    
    <!-- Added the entity audit columns -->
    <changeSet id="20190401034747-audit-1" author="Rami Nassar">
        <addColumn tableName="sct_service_group">
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </addColumn>
    </changeSet>

    <!-- Include SQL of Service Group -->
    <include file="../sql/20190401034747_sql_ServiceGroup.xml" relativeToChangelogFile="true" />

</databaseChangeLog>
